            <string>/// resimulation
// we perform this in the pre-draw event because it happens just before the begin step event.

print("codec events: " + string(global.stateCodecCount));
global.stateCodecCount = 0;

if (keyboard_check_pressed(ord('Q')) &amp;&amp; m_resimBufferActive)
{
    m_continualResimulation ^= true;
}

if (m_continualResimulation)
{
    // load state, then resimulate.
    var gameTimer = global.gameTimer;
    var loadFrame = global.gameTimer - m_recordInterval;
    var bufferIndex = loadFrame mod m_resimBufferLength;
    var bufferFrame = m_resimBufferFrame[bufferIndex];
    if (bufferFrame == loadFrame)
    {
        buffer_seek(m_resimBuffer[bufferIndex], buffer_seek_start, 0);
        // save state
        stateCodecFull(false, m_resimBuffer[bufferIndex]);
        assert(global.gameTimer == bufferFrame);
        resimulate(gameTimer - loadFrame, ev_step_begin);
    }
    else
    {
        // frame wasn't saved :(
        print("Would load frame " + string(loadFrame) + ", but frame " + string(bufferFrame) + " was found instead.");
    }
}
else
{
    if (keyboard_check_pressed(ord('R')) || keyboard_check_pressed(ord('T')))
    {
        if (m_resimBufferActive)
        {
            print("Loading state from m_resimBuffer.");
            var bufferIndex = global.gameTimer mod m_resimBufferLength;
            buffer_seek(m_resimBuffer[bufferIndex], buffer_seek_start, 0);
            
            // load state
            stateCodecFull(false, m_resimBuffer[bufferIndex]);
            
            if (keyboard_check_pressed(ord('R')))
            {
                // resimulate
                print("Resimulating");
                resimulate(m_resimBufferLength, ev_step_begin);
            }
        }
        else
        {
            show_debug_overlay(true);
            m_resimBufferActive = true;
            print("Starting recording.")
        }
    }
}
